/*JAVA FILE*/
package com.example.calculator;

import androidx.appcompat.app.AppCompatActivity;

import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;

public class MainActivity extends AppCompatActivity {


    Button Guruone,Gurutwo,jthree,jfour,jfive,jsix,jseven,jeight,jnine,Guruplus,Guruminus,Gurumul,Guruequal,Gurudivide,jzero,jdot,Gurudel,jac;
    EditText Guruinput;
    boolean isadd,issub,ismul,isdid;
    float valueone, valuetwo;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        Guruone=(Button)findViewById(R.id.one);
        Guruinput=(EditText)findViewById(R.id.input);

        Guruone.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                Guruinput.setText(Guruinput.getText()+"1");
            }
        });

        Gurutwo=(Button)findViewById(R.id.two);
        Gurutwo.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                Guruinput.setText(Guruinput.getText()+"2");
            }
        });

        jthree=(Button)findViewById(R.id.three);

        jthree.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                Guruinput.setText(Guruinput.getText()+"3");
            }
        });

        jfour=(Button)findViewById(R.id.four);

        jfour.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                Guruinput.setText(Guruinput.getText()+"4");
            }
        });

        jfive=(Button)findViewById(R.id.five);

        jfive.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                Guruinput.setText(Guruinput.getText()+"5");
            }
        });

        jsix=(Button)findViewById(R.id.six);
        jsix.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                Guruinput.setText(Guruinput.getText()+"6");
            }
        });

        jseven=(Button)findViewById(R.id.seven);

        jseven.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                Guruinput.setText(Guruinput.getText()+"7");
            }
        });

        jeight=(Button)findViewById(R.id.eight);

        jeight.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                Guruinput.setText(Guruinput.getText()+"8");
            }
        });

        jnine=(Button)findViewById(R.id.nine);

        jnine.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                Guruinput.setText(Guruinput.getText()+"9");
            }
        });

        jzero=(Button)findViewById(R.id.zero);
        jzero.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                Guruinput.setText(Guruinput.getText()+"0");
            }
        });

        Guruplus=(Button)findViewById(R.id.plus);
        Guruplus.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                if(Guruinput==null) {
                    Guruinput.setText("");
                }
                else {
                    valueone = Float.parseFloat(Guruinput.getText() + "");
                    isadd = true;
                    Guruinput.setText(null);
                }
            }
        });

        Guruminus=(Button)findViewById(R.id.minus);

        Guruminus.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {

                if(Guruinput==null) {
                    Guruinput.setText("");
                }
                else {
                    valueone = Float.parseFloat(Guruinput.getText() + "");
                    issub = true;
                    Guruinput.setText(null);
                }

            }
        });

        Gurumul=(Button)findViewById(R.id.mul);

        Gurumul.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                if(Guruinput==null) {
                    Guruinput.setText("");
                }
                else {
                    valueone = Float.parseFloat(Guruinput.getText() + "");
                    ismul = true;
                    Guruinput.setText(null);
                }
            }
        });

        Gurudivide=(Button)findViewById(R.id.divide);

        Gurudivide.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                if(Guruinput==null) {
                    Guruinput.setText("");
                }
                else {
                    valueone = Float.parseFloat(Guruinput.getText() + "");
                    isdid = true;
                    Guruinput.setText(null);
                }
            }
        });

        Guruequal=(Button)findViewById(R.id.equal);

        Guruequal.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                valuetwo = Float.parseFloat(Guruinput.getText()+"");
                if(isadd==true) {
                    Guruinput.setText(valueone+valuetwo+"");
                    isadd=false;
                }

                if(issub==true) {
                    Guruinput.setText(valueone-valuetwo+"");
                    issub=false;
                }

                if(ismul==true) {
                    Guruinput.setText(valueone*valuetwo+"");
                    ismul=false;
                }

                if(isdid==true) {
                    Guruinput.setText(valueone/valuetwo+"");
                    isdid=false;
                }
            }
        });

        jdot=(Button)findViewById(R.id.dot);

        jdot.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                Guruinput.setText(Guruinput.getText()+".");
            }
        });

        jac=(Button)findViewById(R.id.ac);

        jac.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                Guruinput.getText().clear();
            }
        });

        Gurudel=(Button)findViewById(R.id.del);

        Gurudel.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                Guruinput.getText().clear();
            }
        });
    }
}
